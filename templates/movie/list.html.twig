{% extends 'base.html.twig' %}

{% block title %} Movies list - {{ parent() }}{% endblock %}

{% block body %}
    <h2 class="text-center text-red-700 text-3xl font-semibold mb-8">The most popular movies</h2>

    <div class="flex justify-center gap-3 mb-5">
        <a class="py-1 px-2 bg-sky-700 rounded text-white font-semibold inline-block" href="{{ path('movie_create') }}">Add a movie</a>
    </div>

    <div class="grid grid-cols-4 gap-3 max-w-[1000px] mx-auto">
        {% for movie in movies %}
            <div class="border shadow-lg">
                <a href="{{ path('movie_show', {'id': movie.id }) }}">
                    <img class="object-cover" src="{{ movie.cover }}" alt="">
                </a>
                <div class="p-3 mt-3">
                    <h2 class="font-semibold text-lg mb-1">
                        <a href="{{ path('movie_show', {'id': movie.id }) }}">{{ movie.title }}</a>
                    </h2>
                    <hr class="mb-3">
                    <p class="mb-3">
                        {{ movie.tagline }}
                    </p>
                    <div>
                        <a class="py-1 px-2 bg-sky-700 rounded text-white font-semibold inline-block" href="{{ path('movie_show', {'id': movie.id}) }}">See</a>
                        <a class="py-1 px-2 bg-sky-700 rounded text-white font-semibold inline-block" href="{{ path('movie_edit', {'id': movie.id}) }}">Edit</a>
                        <a class="py-1 px-2 bg-sky-700 rounded text-white font-semibold inline-block" href="{{ path('movie_delete', {'id': movie.id}) }}">Delete</a>
                    </div>
                </div>
                
            </div>
        {% endfor %}
    </div>
{% endblock %}
